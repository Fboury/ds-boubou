{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "allowJs": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "lib",
    "target": "ESNext",
    "sourceMap": true,
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  }
}