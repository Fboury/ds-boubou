{
  "name": "@maciffr/http-client",
  "version": "1.7.51",
  "private": false,
  "scripts": {
    "clean-build": "rm -rf ./lib",
    "clean-test": "rm -rf ./coverage",
    "clean-dep": "rm -rf ./node_modules",
    "clean": "npm run clean-build & npm run clean-test & npm run clean-dep",
    "build": "tsc ",
    "test": "jest",
    "integration": "jest -c jest.integration.config.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:coverage": "npm run test -- --coverage --ci --testResultsProcessor=\"jest-sonar-reporter\" --reporters=default --reporters=\"jest-junit\"",
    "test:coverage:ci": "npm run test:coverage"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupJestFile.ts"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|(?!deck.gl)|ng-dynamic)"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "msw": "^1.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2",
    "uuid": "^9.0.0",
    "whatwg-fetch": "^3.6.2"
  },
  "exports": {
    "./*": "./lib/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "lib/*"
      ]
    }
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib/*",
    "src/*"
  ]
}
